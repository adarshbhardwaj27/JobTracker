{
  "manifest_version": 3,
  "name": "JobTracker",
  "description": "An extension that does something cool",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "notifications"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_popup_width": 4000,
    "default_popup_height": 6000
  },
  "externally_connectable": {
    "matches": ["http://localhost:5173/*"]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
